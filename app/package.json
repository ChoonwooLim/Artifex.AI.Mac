{
  "name": "wan22-electron",
  "version": "0.1.0",
  "description": "Wan2.2 Electron desktop app",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"cross-env VITE_DEV_SERVER=true vite\" \"cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "build:renderer": "vite build",
    "build:electron": "node ./scripts/build-electron.mjs",
    "build": "npm run build:renderer && npm run build:electron",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.9",
    "typescript": "^5.5.4",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "@types/three": "^0.179.0",
    "electron-updater": "^6.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reactflow": "^11.11.4",
    "three": "^0.179.1"
  },
  "build": {
    "appId": "com.artifex.ai.wan22",
    "productName": "Artifex AI Studio",
    "copyright": "Copyright Â© 2025 Artifex AI",
    "directories": {
      "output": "dist-installer",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "python/**/*",
      "!python/**/__pycache__",
      "!python/**/*.pyc",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../Wan2.2",
        "to": "wan22",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/*.safetensors",
          "!**/*.pth"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build-resources/icon.ico",
      "certificateFile": null,
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Artifex AI Studio",
      "installerIcon": "build-resources/icon.ico",
      "uninstallerIcon": "build-resources/icon.ico",
      "installerHeaderIcon": "build-resources/icon.ico",
      "license": "build-resources/license.txt",
      "warningsAsErrors": false,
      "menuCategory": true,
      "artifactName": "ArtifexAI-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": true,
      "installerLanguages": [
        "en_US",
        "ko_KR"
      ],
      "guid": "a8c7d3e4-2b5f-4d6e-9c1a-8f7e6d5c4b3a"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "artifex-ai",
        "repo": "artifex-studio",
        "releaseType": "release"
      }
    ]
  }
}
